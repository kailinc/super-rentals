<div class="jumbo">
  <div class="right tomster"></div>
  <h2>Welcome!</h2>
  <p>We hope you find exactly what you're looking for in a place to stay.</p>
  {{#link-to 'about' class="button"}}
    About Us
  {{/link-to}}
</div>

{{!-- set up filtering mechanism to filter by city--}}
{{#list-filter filter=(action 'filterByCity') as |rentals|}}
  <ul class="results">
    {{!-- for each result, well call it rentalUnit --}}
    {{#each rentals as |rentalUnit|}}
    {{!-- use rental-listing template (componenet) to render the data on to the screen --}}
      <li>{{rental-listing rental=rentalUnit}}</li>
    {{/each}}
  </ul>
{{/list-filter}}
